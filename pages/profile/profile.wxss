/* pages/profile/profile.wxss */
.header{
  position: relative;
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}
.background {
  width: 100%;
  filter:blur(4px);
  z-index: -1;
}
.avatar_box{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 3px solid #fff;
  border-radius: 50%;
  overflow: hidden;
}
.avatar{
  width: 100%;
  height: 100%;
}